{
  "name": "static-site-template",
  "version": "1.0.0",
  "description": "A template for static webpack sites",
  "main": "index.js",
  "scripts": {
    "build": "rm -rf ./production/ && webpack --mode production --config ./webpack/webpack.production.config.js",
    "build-check": "rm -rf ./production/ && npm run check-types && webpack --mode production --config ./webpack/webpack.production.config.js",
    "dev": "webpack-dev-server --mode development --config ./webpack/webpack.dev.config.js",
    "check-types": "tsc",
    "lint-style": "sass-lint -c .sass-lint.yml 'src/**/*.scss' -v -q"
  },
  "keywords": [
    "template"
  ],
  "author": "Amanda",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-typescript": "^7.3.3",
    "autoprefixer": "^9.6.1",
    "babel-loader": "^8.0.6",
    "css-loader": "^3.1.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.2.0",
    "eslint-loader": "^2.2.1",
    "eslint-plugin-import": "^2.18.1",
    "file-loader": "^4.1.0",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "htmllint-loader": "^2.1.4",
    "mini-css-extract-plugin": "^0.8.0",
    "node-sass": "^4.12.0",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "postcss-loader": "^3.0.0",
    "sass-lint": "^1.13.1",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "stylelint": "^10.1.0",
    "stylelint-config-recommended": "^2.2.0",
    "stylelint-webpack-plugin": "^0.10.5",
    "svg-url-loader": "^3.0.0",
    "typescript": "^3.5.3",
    "uglifyjs-webpack-plugin": "^2.1.3",
    "webpack": "^4.36.1",
    "webpack-cli": "^3.3.6",
    "webpack-dev-server": "^3.7.2",
    "webpack-merge": "^4.2.1"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "dependencies": {
    "ejs-loader": "^0.3.3"
  }
}
